<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/storeImageTestImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/logo_bl" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_above="@id/storeImageTestImageView"
        android:layout_alignBottom="@id/storeImageTestImageView"
        android:layout_toRightOf="@id/storeImageTestImageView"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/searchStoreNameTestTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:fontFamily="serif"
            android:gravity="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/searchStoreEmptyTableTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:gravity="center"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>